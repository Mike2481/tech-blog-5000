
  {{#if posts.length}}
  <section>
    <h2>Your Blog Posts</h2>
    <ul class="dashboard-posts" style="list-style-type:none;">
      {{#each posts as |post|}}
      <li class="user-post">
        {{> post-extend post}}
        <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Blog Post</a>
      </li>
      {{/each}}
    </ul>
  </section>
  {{/if}}

