{{!-- comment partial used in dashboard and single post views --}}

<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
      {{!-- link to comment edit view specific to the comment--}}
      <a href="/single/edit/{{id}}">Edit</a>
    </div>

  </section>
  {{/each}}
</div>

